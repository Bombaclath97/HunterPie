<UserControl x:Name="AilmentComponent"
             x:Class="HunterPie.GUI.Widgets.HealthWidget.Parts.AilmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Helpers="clr-namespace:HunterPie.GUI.Helpers" Width="20" Height="20">
    <Grid>
        <Image Source="{Binding ElementName=AilmentComponent, Path=Icon}"/>
        <Helpers:Arc Stroke="#FF00FFB9" EndAngle="{Binding ElementName=AilmentComponent, Path=TimerEndAngle}" StartAngle="90" StrokeThickness="2"/>
    </Grid>
</UserControl>
